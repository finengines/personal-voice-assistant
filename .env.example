# Personal Agent Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit the actual .env file to Git!

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=personal_agent
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_database_password_here

# =============================================================================
# LiveKit Configuration
# =============================================================================
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_secret_key_at_least_32_characters_long

# =============================================================================
# AI Service API Keys
# =============================================================================

# OpenAI (Required for LLM functionality)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Deepgram (Required for speech-to-text)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Voice Synthesis Services (Optional - choose one or more)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
CARTESIA_API_KEY=your_cartesia_api_key_here

# Additional LLM Providers (Optional)
GROQ_API_KEY=your_groq_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# =============================================================================
# Security Configuration
# =============================================================================

# Encryption key for secure API key storage (must be 43-44 character base64 URL-safe string)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY_ENCRYPTION_KEY=your_base64_encoded_encryption_key_here

# JWT secret for authentication (must be secure random string)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your_jwt_secret_key_here

# =============================================================================
# Authentication Configuration
# =============================================================================

# Authentication API port (default: 8001)
AUTH_API_PORT=8001

# Admin account credentials (required for personal access)
ADMIN_EMAIL=your_email@example.com
ADMIN_PASSWORD=your_secure_password_here
ADMIN_NAME=Your Name

# Token expiration settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Environment indicator (set to 'production' in production)
ENV=development

# =============================================================================
# Application Configuration (Optional)
# =============================================================================

# Timezone
TZ=Europe/London

# API Ports (default values shown)
MCP_API_PORT=8082
PRESET_API_PORT=8083
GLOBAL_SETTINGS_API_PORT=8084

# Data storage path for production
DATA_PATH=./data

# =============================================================================
# Development vs Production Notes
# =============================================================================

# Local Development:
# - Use localhost URLs and exposed ports
# - Set LIVEKIT_API_KEY=devkey and LIVEKIT_API_SECRET=your_secret_key_at_least_32_characters_long for dev

# Production (Dokploy):
# - Use proper API keys for all services
# - Set secure database password
# - Configure proper LiveKit credentials
# - Use strong encryption key 